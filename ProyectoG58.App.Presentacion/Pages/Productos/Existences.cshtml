@page
@model ProyectoG58.App.Presentacion.ExistencesModel
@{
}
<div class="card-header bg-danger"><h3 class="text-center font-weight-light my-4 ">Administración de Bodegas</h3></div>

<div class="row mb-3">
    <div class="card-body">
       <div class="row mb-3">
            <div class="col-md-10">
                <div class="mt-4 mb-0">
                    @using (Html.BeginForm())
                    {
                        <p>
                            Buscar por Nombre: @Html.TextBox("SearchString")  
                            <input class="btn btn-primary" type="submit" value="Buscar" />
                            <a asp-page="./Existences" class="btn btn-success">Listar Todo</a><br>
                        </p>
                    }
                </div>
            </div>
            <div class="col-md-2">
                <div class="mt-4 mb-0">
                    <a asp-page="./EditBod" class="btn btn-primary">Crear Bodega</a><br>
                </div>                
            </div>           
       </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            @foreach (var bodega in Model.bodega)
            {
                <tr>
                    <td>@bodega.id</td>
                    <td>@bodega.nombre</td>
                    <td>@bodega.direccion</td>
                    <td>@bodega.telefono</td>
                    <td>
                        <a asp-page="./DetailsBod" asp-route-bodegaId="@bodega.id">
                            <button type="button" class="btn btn-primary btn-xs" aria-label="Left Align"  title="Detalle">
                            <span class="fas fa-eye" aria-hidden="true"> </span>
                            </button>
                        </a>  
                        <a asp-page="./EditBod" asp-route-bodegaId="@bodega.id">
                            <button type="button" class="btn btn-success btn-xs" aria-label="Left Align" title="Editar">
                                <span class="fas fa-edit" aria-hidden="true"> </span>
                            </button>
                        </a>
                        <a asp-page="./DeleteBod" asp-route-bodegaId="@bodega.id">
                            <button type="button" class="btn btn-danger btn-xs" aria-label="Left Align" title="Eliminar">
                                <span class="fas fa-trash-alt" aria-hidden="true"> </span>
                            </button>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

