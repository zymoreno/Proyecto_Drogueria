@page
@model ProyectoG58.App.Presentacion.EditModelProd
@{
}

<div class="row mb-3">
    @if(Model.Mensaje!=null){
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
    }
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <form method="post">
                        @if(Model.producto.id > 0){
                            <div class="card-header bg-dark"><h3 class="text-center font-weight-light my-4 text-primary">Edición del Producto</h3></div>
                        }else{
                            <div class="card-header bg-dark"><h3 class="text-center font-weight-light my-4 text-primary">Crear un Producto</h3></div>
                        }
                        <div class="card-body">
                            
                            <table class="table table-hover">
                                <tr>
                                    <td style="display: none">ID:</td>
                                    <td style="display: none"><input type="hidden" asp-for="producto.id" /></td>
                                </tr>
                                <tr>
                                    <td style="width:200px"><b>NOMBRE:</b></td>
                                    <td>
                                        <input asp-for="producto.nombre" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.nombre"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>LOTE:</b></td>
                                    <td>
                                        <input asp-for="producto.lote" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.lote"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>FECHA VENCIMIENTO:</b></td>
                                    <td>
                                        <input asp-for="producto.fechaVencim" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.fechaVencim"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>CANTIDAD:</b></td>
                                    <td>
                                        <input asp-for="producto.cantidad" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.cantidad"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>PRECIO:</b></td>
                                    <td>
                                        <input asp-for="producto.precio" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.precio"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>PRESENTACIÓN:</b></td>
                                    <td>
                                        <input asp-for="producto.presentacion" class="form-control">
                                        <span class="text-danger" asp-validation-for="producto.presentacion"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>ESTADO:</b></td>
                                    <td>
                                        <select asp-for="producto.estado" class="form-control">
                                            <option value="A">Activo</option>
                                            <option value="I">Inactivo</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="producto.estado"></span>
                                    </td>
                                </tr>
                            </table>
                            <div class="card-footer text-center py-3">
                                <button type="submit" class="btn btn-success">Grabar</button>
                                <a asp-page="./ListProd">
                                    <button type="button" class="btn btn-warning btn-xs" aria-label="Left Align"  title="Volver">
                                        <span > Volver </span>
                                    </button>
                                </a>  
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>