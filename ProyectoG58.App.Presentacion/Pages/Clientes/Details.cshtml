@page
@model ProyectoG58.App.Presentacion.DetailsModel
@{
    string est= "";

     @if (Model.cliente.estado.Equals("A"))
    {
        est ="Activo";
    }else{
        est = "inactivo";
    }
}
<div class="row mb-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header bg-dark"><h3 class="text-center font-weight-light my-4 text-primary">Detalle del Cliente</h3></div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <tr>
                                <td style="width:200px"><b>ID:</b></td>
                                <td>@Model.cliente.id</td>
                            </tr>
                            <tr>
                                <td><b>NOMBRE:</b></td>
                                <td>@Model.cliente.nombre</td>
                            </tr>
                            <tr>
                                <td><b>IDENTIFICACIÓN:</b></td>
                                <td>@Model.cliente.identificacion</td>
                            </tr>
                            <tr>
                                <td><b>DIRECCIÓN:</b></td>
                                <td>@Model.cliente.direccion</td>
                            </tr>
                            <tr>
                                <td><b>TELÉFONO:</b></td>
                                <td>@Model.cliente.telefono</td>
                            </tr>
                            <tr>
                                <td><b>EMAIL:</b></td>
                                <td>@Model.cliente.email</td>
                            </tr>
                            <tr>
                                <td><b>ESTADO:</b></td>
                                <td>@est</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-footer text-center py-3">
                        <a asp-page="./ListClient">
                            <button type="button" class="btn btn-warning btn-xs" aria-label="Left Align"  title="Volver">
                                <span > Volver </span>
                            </button>
                        </a>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
