@page
@model ProyectoG58.App.Presentacion.ListClientModel
@{
}
<div class="card-header bg-danger"><h3 class="text-center font-weight-light my-4 ">Listado de Clientes</h3></div>

<div class="row mb-3">
    <div class="card-body">
       <div class="row mb-3">
            <div class="col-md-10">
                <div class="mt-4 mb-0">
                    @using (Html.BeginForm())
                    {
                        <p>
                            Buscar por Nombre: @Html.TextBox("SearchString")  
                            <input class="btn btn-primary" type="submit" value="Buscar" />
                            <a asp-page="./ListClient" class="btn btn-success">Listar Todo</a><br>
                        </p>
                    }
                </div>
            </div>
            <div class="col-md-2">
                <div class="mt-4 mb-0">
                    <a asp-page="./Edit" class="btn btn-primary">Adicionar un Cliente</a><br>
                </div>                
            </div>           
       </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Identificación</th>
                    <th>Dirección</th>
                    <th>Telefono</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                    <!--<th>Detalle</th>
                    <th>Editar</th>
                    <th>Eliminar</th>-->
                </tr>
            </thead>
            @foreach (var cliente in Model.clientes)
            {
                <tr>
                    <td>@cliente.id</td>
                    <td>@cliente.nombre</td>
                    <td>@cliente.identificacion</td>
                    <td>@cliente.direccion</td>
                    <td>@cliente.telefono</td>
                    <td>@cliente.email</td>
                    <td>@cliente.estado</td>
                    <td>
                        <a asp-page="./Details" asp-route-clienteId="@cliente.id">
                            <button type="button" class="btn btn-primary btn-xs" aria-label="Left Align"  title="Detalle">
                            <span class="fas fa-eye" aria-hidden="true"> </span>
                            </button>
                        </a>  
                        <a asp-page="./Edit" asp-route-clienteId="@cliente.id">
                            <button type="button" class="btn btn-success btn-xs" aria-label="Left Align" title="Editar">
                                <span class="fas fa-edit" aria-hidden="true"> </span>
                            </button>
                        </a>
                        <a asp-page="./Delete" asp-route-clienteId="@cliente.id">
                            <button type="button" class="btn btn-danger btn-xs" aria-label="Left Align" title="Eliminar">
                                <span class="fas fa-trash-alt" aria-hidden="true"> </span>
                            </button>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

